<div class="container-fluid">
<h2>Welcome to Movie Site!</h2>
<div class="row row-cols-1 row-cols-md-6 g-4">
 {foreach $list as $item}

  <div class="col">
    <div class="card h-100 div">
      <img src= '../../../../www/images/{$item->image}' class="card-img-top img-main"  alt="poster">
      <div class="card-body">
        <h5 class="card-title"><b>{$item->name}</b></h5>
        <p class="card-text">{$item->year}</p>
         <p class="card-text"><b>{$item->genre} </b> {$item->length} min.</span></p>
           <p class="card-text">{$item->creatorName} {$item->surname}</p>
           <p class="card-text">{$item->country}</p>
      </div>
    </div>
  </div>
  {/foreach}
  </div><br/><br/>
